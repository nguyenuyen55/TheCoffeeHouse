<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:weightSum="10"
    android:background="#fff"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/fragment_map"
        android:name="com.example.baicuoiky.MyMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Spinner
        android:id="@+id/spnCategory"
        android:layout_margin="30dp"
android:background="@drawable/style_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
<ImageView
    android:layout_width="50dp"
    android:layout_height="55dp"
    android:layout_alignParentRight="true"
    android:layout_above="@+id/cc"
    android:src="@drawable/a2"/>
    <LinearLayout
        android:layout_marginTop="10dp"
android:id="@+id/cc"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="3">


        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"

                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="200dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/store1"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quận hải châu 82 Ba tháng hai "
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The coffee house"
                            android:textColor="#000"
                            android:textStyle="bold" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"

                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="200dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/store2"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quận hải châu 82 Ba tháng hai "
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The coffee house"
                            android:textColor="#000"
                            android:textStyle="bold" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"

                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="200dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/store1"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quận hải châu 82 Ba tháng hai "
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhà mang tới liền"
                            android:textColor="#000"
                            android:textStyle="bold" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"

                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="200dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/store1"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quận hải châu 82 Ba tháng hai "
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhà mang tới liền"
                            android:textColor="#000"
                            android:textStyle="bold" />




                    </LinearLayout>
                </androidx.cardview.widget.CardView>










            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</RelativeLayout>