<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context=".lichsu">
    <LinearLayout
        android:background="#fff"
        android:weightSum="4"
        android:id="@+id/dau"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/close"
            android:layout_width="20dp"         android:layout_height="30dp"
            android:src="@drawable/ic_close" />
        <TextView
            android:layout_weight="2"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử đơn hàng"
            android:textColor="#000"/>



    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/dau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<ImageView

    android:id="@id/dau2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:src="@drawable/xeship"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Bạn chưa có đơn hàng nào"
      android:textColor="#000"
      android:textSize="20dp"
      android:gravity="center"
      />
        <Button
            android:textColor="#514848"
            android:layout_margin="20dp"
            android:layout_below="@+id/dau2"
            android:id="@+id/sign"
            android:background="@drawable/emailbg"
            android:text="Đặt hàng ngay nào"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>
</RelativeLayout>