<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".ChiTietUuDai"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/boder_linear"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/back"

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Giảm 50%, thèm gì gọi nhé Nhà.."/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"/>

    </LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:src="@drawable/bg"/>
<TextView
    android:layout_width="wrap_content"
    android:textColor="#000"
    android:textStyle="bold"
    android:textSize="19dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="2dp"


    android:layout_height="wrap_content"
    android:text="Giảm 50%, thèm gì gọi nhé Nhà mang tới tiền"/>
<TextView
    android:textColor="#000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="7 tháng 12, 2020"/>
    <TextView
android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoà vào không khí siêu ssale cuối năm, mời team mình nghĩ tay gọi món yêu thích Nhà giảm 50% khi nhâpj mã MERRY50 - để lên tinh thàn săn saled thoăn thoắt cùng:"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trà sữa chân ái"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trái cây mát lạnh"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trà macchiato thơm báo"/>


</LinearLayout
