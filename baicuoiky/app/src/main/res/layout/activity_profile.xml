<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="10"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#E4E2E0"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="#fff"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_close"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rollback4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/avt"
            app:civ_border_width="3dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            app:civ_border_color="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thị Thu Uyên"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="#000"></TextView>
       <LinearLayout
           android:layout_width="match_parent"
           android:gravity="center"
           android:layout_marginBottom="8dp"
           android:layout_height="wrap_content"
        android:orientation="horizontal"><TextView
            android:textColor="#7E7676"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>

           <ImageView
               android:layout_width="22dp"
               android:layout_marginLeft="5dp"
               android:layout_height="match_parent"
               android:src="@drawable/tien" />
           <TextView
               android:textColor="#7E7676"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="|"/>
           <TextView
               android:textColor="#000"
               android:textSize="16sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Khách hàng mới"/>
       </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
      android:weightSum="2"
        android:background="#E4E2E0"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:text="Đổi"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="#1736E1"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       >
        <LinearLayout
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="vertical">
            <TextView
                android:textColor="#9C9A98"
              android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên"></TextView>
            <TextView
                android:layout_marginLeft="9dp"
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Thị Thu Uyên"></TextView>
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7E7676"></View>
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textColor="#9C9A98"

                android:layout_width="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_height="wrap_content"
                android:text="Sinh nhật"></TextView>
            <TextView
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05/05/2000"></TextView>
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#7E7676"></View>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:background="#fff"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textColor="#9C9A98"

                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"></TextView>
            <TextView
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0949492015"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:background="#fff"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textColor="#9C9A98"

                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"></TextView>
            <TextView
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nguyenuyen552000@gmail.com"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:background="#fff"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textColor="#9C9A98"

                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"></TextView>
            <TextView
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"></TextView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>