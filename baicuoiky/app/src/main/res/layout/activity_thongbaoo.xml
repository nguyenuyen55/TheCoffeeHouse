<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E4E2E0"
    android:layout_height="match_parent"
    tools:context=".thongbaoo">

    <LinearLayout
        android:background="#fff"
        android:weightSum="4"
        android:id="@+id/dau"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close" />
        <TextView
            android:layout_weight="2"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textColor="#000"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/list"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dau2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/dau"
        android:background="#fff"
        android:layout_height="wrap_content"
android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:src="@drawable/tb" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn thích món nào nhất tại nhà"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Cà phê sữa đậm đà"
                    android:layout_marginLeft="5dp"

                    android:textColor="#000"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Trà đào cam sả trứ danh"

                    android:textColor="#000"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Trà olong hạt sen thơm bùi..."
android:layout_marginBottom="6dp"
                    android:textColor="#000"
                    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hôm nay lúc 13:00"
    android:layout_marginBottom="6dp"
    android:textSize="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/dau2"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:src="@drawable/tb" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chào mừng Thành viên của Nhà."
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="307dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Nhớ thử ngay Trà Trái Cây hoặc Cà phê đậm đà cyar nhà nhé. Đặt ngay đơn hàng đầy tiên và tích điểm bean ngay nào ! "
                    android:textColor="#000"

                    android:textSize="10dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hôm nay lúc 5:00"
                    android:layout_marginBottom="6dp"
                    android:textSize="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>